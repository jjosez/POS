<view>
    <columns>
        <group name="pos" title="pos-settings" numcolumns="12" valign="bottom">
            <column name="pos-family-image" numcolumns="4">
                <widget type="file" fieldname="posimage" required="false" accept=".jpg,.jpeg,.png"/>
            </column>
            <column name="sort" numcolumns="4" order="100">
                <widget type="number" fieldname="ordenpos"/>
            </column>
            <column name="pos-available" numcolumns="4" order='110'>
                <widget type="checkbox" fieldname="mostrarpos"/>
            </column>
        </group>
    </columns>
</view>
