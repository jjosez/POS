<view>
    <columns>
        <group name="data" title="general" numcolumns="12">
            <column name="name" numcolumns="3" order="100">
                <widget type="text" fieldname="nombre" icon="fas fa-tag" required="true"/>
            </column>
            <column name='customer' numcolumns='3' order='110'>
                <widget type='autocomplete' fieldname='codcliente' onclick='EditCliente'>
                    <values source='clientes' fieldcode='codcliente' fieldtitle='nombre'/>
                </widget>
            </column>
            <column name="warehouse" titleurl="ListAlmacen" numcolumns="3" order="120">
                <widget type="select" fieldname="codalmacen" required='true' onclick="EditAlmacen" icon="fas fa-warehouse">
                    <values source="almacenes" fieldcode="codalmacen" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="company" titleurl="ListEmpresa" numcolumns="3" order="130">
                <widget type="select" fieldname="idempresa" required='true' onclick="EditEmpresa" icon="fas fa-building" readonly="true">
                    <values source="empresas" fieldcode="idempresa" fieldtitle="nombre"/>
                </widget>
            </column>
            <column name="serie" titleurl="ListSerie" numcolumns="3" order="130">
                <widget type="select" fieldname="codserie" required='true' onclick="EditSerie" icon="fas fa-list-ol">
                    <values source="series" fieldcode="codserie" fieldtitle="descripcion"/>
                </widget>
            </column>
            <column name="doc-type" numcolumns="3" order="140">
                <widget type="select" fieldname="defaultdocument" translate="true" required="true" icon="fas fa-file-invoice">
                    <values title="customer-estimation">PresupuestoCliente</values>
                    <values title="customer-order">PedidoCliente</values>
                    <values title="customer-delivery-note">AlbaranCliente</values>
                    <values title="customer-invoice">FacturaCliente</values>
                    <values title="supplier-estimation">PresupuestoProveedor</values>
                    <values title="supplier-order">PedidoProveedor</values>
                    <values title="supplier-delivery-note">AlbaranProveedor</values>
                    <values title="supplier-invoice">FacturaProveedor</values>
                </widget>
            </column>
            <column name="product-source" numcolumns="3" order="160">
                <widget type="select" fieldname="productsource" translate="true" icon="fas fa-search" readonly="true">
                    <values title="company">1</values>
                    <values title="warehouse">2</values>
                </widget>
            </column>
        </group>
        <group name="extra" title="other-settings" numcolumns="6">
            <column name="ticket-line-lenght" order="100">
                <widget type="number" fieldname="anchopapel"/>
            </column>
            <column name="Numero tickets" order="100">
                <widget type="number" fieldname="numerotickets"/>
            </column>
            <column name="pos-checkout-available" numcolumns="3" order='110'>
                <widget type="checkbox" fieldname="aceptapagos"/>
            </column>
        </group>
    </columns>
</view>
