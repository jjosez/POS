{% macro productSearchTemplate(i18n) %}
    <div role="listitem" class="product-add-btn bg-white cursor-pointer shadow-sm rounded-lg p-4 mb-4 flex"
         data-action="setProductAction" data-code="" data-description="Producto Generico">
        <div class="mr-4 flex items-center">
            <span class="text-sky-500"><i class="fas fa-2x fa-tags"></i></span>
        </div>
        <div class="flex-1">
            <p class="text-sm uppercase font-semibold text-gray-800">XXX-XXX</p>
            <p class="text-base text-gray-600">PRODUCTO DE ENTRDA LIBRE</p>
        </div>
        <div class="w-1/4 ml-4 flex-col items-center">
            <div class="text-sm uppercase font-semibold px-3 py-0.5 bg-gray-200 text-gray-800 rounded-full">0</div>
            <div class="text-sm lowercase font-semibold mt-2 px-3 py-0.5 bg-gray-200 text-gray-800 rounded-full">
                &infin;
            </div>
        </div>
    </div>
    <% it.items.forEach(function(item){ %>
    <div role="listitem" class="bg-white cursor-pointer shadow-sm rounded-lg p-4 mb-4 flex"
         data-action="setProductAction" data-code="<%= item.code %>" data-description="<%= item.description %>">
        <div class="mr-4 flex items-center">
            <span class="bg-slate-gray-200"><i class="fas fa-3x fa-box"></i></span>
        </div>
        <div class="flex-1">
            <p class="text-sm uppercase font-semibold text-gray-800">{{ i18n.trans('code') }} : <%= item.code %></p>
            <p class="text-base text-gray-600"><%= item.description %></p>
            <% if(item.detail) { %>
                <p><%= item.detail %></p>
            <% } %>
        </div>
        <div class="w-1/4 ml-4 flex-col items-center">
            <div class="text-sm font-semibold px-3 py-0.5 bg-gray-200 text-gray-800 rounded-full">
                <%= item.price %>
            </div>
            <div class="text-sm lowercase font-semibold mt-2 px-3 py-0.5 bg-gray-200 text-gray-800 rounded-full
            pointer-events-auto" data-action="stockDetailAction" data-code="<%= item.code %>">
                <%= item.stock | 0 %> {{ i18n.trans('available') }}
            </div>
        </div>
    </div>
    <% }) %>
{% endmacro %}

{% macro customerSearchTemplate() %}
    <% if(it.items.length === 0) { %>
    <tr>
        <td colspan="20" class="p-4">No se encontraron clientes</td>
    </tr>
    <% } %>
    <% it.items.forEach(function(customer){ %>
    <tr class="bg-blue-100 cursor-pointer hover:bg-blue-500 hover:text-white">
        <td class="p-4 font-medium add-customer-btn" data-action="setCustomerAction"
            data-code="<%= customer.code %>" data-description="<%= customer.description %>">
            <%= customer.description %>
        </td>
    </tr>
    <% }) %>
{% endmacro %}

{% macro cartTemplate(i18n) %}
    <% if(it.lines.length === 0) { %>
    <div class="h-full flex justify-center items-center">
        <i class="fa fa-shopping-cart fa-5x text-slate-gray-300"></i>
    </div>
    <% } %>
    <% it.lines.forEach(function(value, index) { %>
    <div class="flex px-2 py-2 w-full select-none text-slate-gray-700 border-b-4 border-dotted border-opacity-50">
        <div class="flex items-center">
            <button class="btn btn-icon bg-gray-200 text-slate-800 focus:ring-gray-600"
                    data-action="editProductAction" data-index="<%= index %>">
                <i class="fas fa-pen-alt"></i>
            </button>
        </div>
        <div class="flex w-full mx-2" data-index="<%= index %>">
            <label class="flex items-center">
                <input type="text" class="h-12 w-12 font-medium text-center bg-slate-gray-200 rounded-lg"
                       value="<%= value.cantidad %>">
            </label>
            <div class="flex-1 mx-2">
                <h4 class="font-semibold"><%= value.referencia %></h4>
                <p><%= value.descripcion %></p>
                <span class="text-blue-500 uppercase">
                    {{ i18n.trans('pvp') }}: <%= value.pvpunitario %> / {{ i18n.trans('total') }}: <%= value.pvptotal %>
                </span>
            </div>
        </div>
        <div class="flex items-center">
            <button class="btn btn-icon btn-danger" data-action="deleteProductAction" data-index="<%= index %>">
                <i class="fas fa-trash-alt"></i>
            </button>
        </div>
    </div>
    <% }) %>
{% endmacro %}

