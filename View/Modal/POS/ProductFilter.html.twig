<div id="productFilterModal" class="modal hidden">
    <div class="modal-content md:modal-content-md">
        <div class="modal-header">
            <h2 class="text-2xl text-slate-gray-700 font-semibold">{{ i18n.trans('filters') }}</h2>
            <button class="btn btn-icon btn-danger ml-2" data-toggle="modal" data-target="productFilterModal">
                <i class="fa fw fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <div id="familyList" class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {% for familia in fsc.getParentFamilies() %}
                    {% set bgcolor =  familia.madre ? 'bg-slate-50' : 'bg-slate-100' %}
                    <div role="listitem"
                         class="{{ bgcolor }} p-4 shadow-sm rounded-lg font-semibold cursor-pointer"
                         data-action="setProductFamilyAction"
                         data-code="{{ familia.codfamilia }}"
                         data-madre="{{ familia.madre }}">
                        {{ familia.descripcion }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
