<div class="modal hidden" id="productFilterModal">
    <div class="modal-content md:modal-content-md">
        <div class="modal-header">
            <h2 class="text-2xl text-slate-gray-700 font-semibold">{{ i18n.trans('filters') }}</h2>
            <button class="btn btn-icon btn-danger ml-2" data-toggle="modal" data-target="productFilterModal">
                <i class="fa fw fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="grid grid-cols-4 gap-4">
                {% for familia in fsc.getFamilies() %}
                    {% set bgcolor =  familia.madre ? 'bg-cyan-500' : 'bg-yellow-500'%}
                    <div role="listitem"
                         class="{{ bgcolor}} p-4 shadow-sm rounded-lg text-white text-xl font-semibold cursor-pointer"
                         data-action="setTableAction" data-field="mesa"
                         data-value="{{ familia.codfamilia }}">
                        {{ familia.descripcion }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
