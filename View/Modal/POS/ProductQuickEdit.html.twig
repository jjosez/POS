<div id="productQuickEditModal" class="modal hidden">
    <!--content-->
    <div class="modal-content md:modal-content-sm">
        <!--header-->
        <div class="modal-header">
            <h2 class="text-2xl text-slate-gray-700 font-semibold">{{ i18n.trans('edit') }}</h2>
            <button class="btn btn-icon btn-danger ml-2" data-toggle="modal" data-target="productQuickEditModal">
                <i class="fa fw fa-times"></i>
            </button>
        </div>
        <!--body-->
        <div class="modal-body">
            <div id="productQuickEditForm" class="flex-col items-center">
                <label class="font-semibold uppercase mb-2">{{ i18n.trans('quantity') }}</label>
                <div class="flex">
                    <button class="btn btn-icon btn-warning" data-toggle="modal"
                            data-target="productQuickEditModal">
                        <i class="fa fw fa-minus"></i>
                    </button>
                    <div class="form-group mx-2 flex-auto">
                        <input type="number" class="form-control" value="0"
                               data-action="editProductFieldAction" data-index="<%= it.index %>"
                               data-field="cantidad">
                    </div>
                    <button class="btn btn-icon btn-secondary flex-none" data-toggle="modal" data-target="productQuickEditModal">
                        <i class="fa fw fa-plus"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
