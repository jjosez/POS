{% extends 'Master/MicroTemplate.html.twig' %}
{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('Dinamic/Assets/CSS/atlantis.css') }}" />
    <link rel="stylesheet" href="{{ asset('Plugins/EasyPOS/Assets/CSS/custom.ui.css') }}" />
{% endblock %}
{% block fullBody %}
    <body>
        <div class="wrapper compact-wrapper">
            <!-- Main Header -->
                {{ include('POS/Layout/Header.html.twig') }}
            <!-- Main Header -->
            <!-- Sidebar -->
                {{ include('POS/Layout/Sidebar.html.twig') }}
            <!-- End Sidebar -->
            <!-- Mainpanel -->
            <div class="main-panel">
                <div class="content">
                    <div class="page-inner">
                        <div class="row">
                            {% block messages %}
                                {% from 'Macro/Utils.html.twig' import message as show_message %}
                                {{ show_message(log, ['error', 'critical', 'alert', 'emergency'], 'danger') }}
                                {{ show_message(log, ['warning'], 'warning') }}
                                {{ show_message(log, ['notice'], 'success') }}
                                {{ show_message(log, ['info'], 'info') }}
                            {% endblock %}
                        </div>
                        <div class="page-category">
                            {% block body %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
                {{ include('POS/Layout/Footer.html.twig') }}
            </div>
            <!-- End Mainpanel -->
        </div>

        {% block modals %}
        {% endblock %}

        {% block js %}
            <script src="{{ asset('node_modules/bootbox/dist/bootbox.min.js') }}"></script>
            <script src="{{ asset('Dinamic/Assets/JS/jquery.scrollbar.min.js') }}"></script>
            <script src="{{ asset('Dinamic/Assets/JS/atlantis.min.js') }}"></script>
        {% endblock %}

        {{ debugBarRender.render() | raw }}
    </body>
{% endblock %}
