{% for customer in fsc.searchCustomerList() %}
    <tr>
        <td><span class="font-weight-bold">{{ customer.code }}</span><br>{{ customer.description }}</td>
        <td>
            <button class="btn btn-sm btn-success item-add-button" type="button" data-code="{{ customer.code }}"
                    data-description="{{ customer.description }}">
                <i class="fas fa-plus"></i>
            </button>
        </td>
    </tr>
{% endfor %}