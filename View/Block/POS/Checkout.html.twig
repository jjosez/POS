<div class="flex flex-row h-full bg-white">
    <div class="flex flex-col flex-1 place-content-between bg-gray-50 shadow-lg">
        <div class="p-5">
            <h2 class="text-xl font-medium"><i class="fas fa-shopping-cart"></i></h2>
            <h2 id="orderItemsNumber" class="text-2xl font-medium text-right">0</h2>
        </div>
        <div class="p-5 border-t-2 border-dashed">
            <h2 class="text-xl font-medium">{{ i18n.trans('subtotal') }}</h2>
            <h2 id="orderSubtotal" class="text-2xl font-medium text-right">0.000</h2>
        </div>
        <div class="p-5 border-t-2 border-dashed">
            <h2 class="text-xl font-medium">{{ i18n.trans('percentage-discount') }}</h2>
            <div class="form-group flex flex-row mt-4">
                <input id="orderDiscount" type="number" class="flex-grow-0" value="0">
                <span id="orderDiscountAmount" class="flex-1 text-2xl font-medium text-right w-8/12">0.000</span>
            </div>
        </div>
        <div class="p-5 border-t-2 border-dashed">
            <h2 class="text-xl font-medium">{{ i18n.trans('total') }}</h2>
            <h2 id="orderTotalNet" class="text-2xl font-medium text-right">0.000</h2>
        </div>
        <div class="p-5 border-t-2 border-dashed">
            <h2 class="text-xl font-medium">{{ i18n.trans('taxes') }}</h2>
            <h2 id="orderTaxes" class="text-2xl font-medium text-right">0.000</h2>
        </div>
        <div class="p-5 text-white bg-slate-800 border-t-4 border-solid">
            <h2 class="text-2xl font-medium">{{ i18n.trans('due-amount') }}:</h2>
            <h4 id="orderTotal" class="font-sans text-4xl font-bold text-center">0.000</h4>
        </div>
    </div>
    <div class="flex flex-col w-8/12">
        <div class="flex w-full border-b-4 text-white font-medium">
            <div class="flex-grow p-5 bg-green-500">
                <h2 class="text-xl text-green-800">{{ i18n.trans('payment-amount') }}:</h2>
                <h2 id="checkoutTotalTendered" class="text-right text-4xl">0</h2>
            </div>
            <div class="flex-grow p-5 bg-yellow-500">
                <h2 class="text-xl text-yellow-800">{{ i18n.trans('payment-change') }}:</h2>
                <h2 id="checkoutChange" class="text-right text-4xl">0</h2>
            </div>
        </div>
        <div class="flex flex-col flex-1">
            <div id="paymentList" class="flex-1">
            </div>
            <div class="p-5 mt-auto">
                <div class="flex flex-wrap justify-center gap-4">
                    {% for element in fsc.getPaymentMethods() %}
                        <button class="btn btn-primary payment-modal-btn" data-code="{{ element.codpago }}"
                                data-target="paymentModal">
                            <i class="fas fa-plus-circle mr-2"></i>
                            <span class="w-full text-center">{{ element.descripcion }}</span>
                        </button>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="p-5 mt-auto border-t-4">
            <div class="flex">
                <button class="btn btn-danger" data-toggle="block" data-target="checkoutView">
                    <i class="fa fa-arrow-alt-circle-left"></i>
                    <span class="mx-2 text-center">Regresar</span>
                </button>
                <button id="orderSaveButton" class="btn btn-success ml-auto" data-toggle="block" data-target="checkoutView" disabled="disabled">
                    <span class="mx-2 text-center">Confirmar</span>
                    <i class="fa fa-arrow-alt-circle-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>
